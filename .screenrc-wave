vbell off
startup_message off
bindkey -k F1 prev
bindkey -k F2 next
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %l %{..Y} %m/%d %C%a "

defscrollback 10000

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"

# tell screen how to set colors. AB = background, AF=foreground
termcapinfo mlterm 'Co#256:AB=E[48;5;%dm:AF=E[38;5;%dm'

# erase background with current bg color
defbce "on"

# in a window with a terminated process, k closes and r restarts the process
zombie kr

# Automatically start up a bunch of windows.
screen -t "shell" 
screen -t "cel" ./manage.py celeryd --loglevel=DEBUG
screen -t "dj" ./manage.py runserver 0.0.0.0:8000
screen -t "ipy" ./manage.py shell_plus
screen -t "dj-log" tail -f ../logs/django.log 
screen -t "redis" redis-server 
